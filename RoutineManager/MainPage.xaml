<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoutineManager.MainPage"
             Title="Routine Manager"
             
             >

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25" BackgroundColor="#263238">
            <Label Text="Start training"
               TextColor="White" 
               HorizontalTextAlignment="Center"
               FontSize="45"
               Padding="0,20,0,0" FontAutoScalingEnabled="True" FontFamily="Preview"
               >
            </Label>
            <Button Text="Rutina 1" WidthRequest="350" HeightRequest="200" Background="#455a64"
                Clicked="OnButtonClicked" FontSize="70" TextColor="#e1f5fe">
            </Button>

            <Button Text="CREAR RUTINA NUEVA"
                WidthRequest="300" HeightRequest="50" Background="#455a64" BorderColor="#546e7a" BorderWidth="1" FontAutoScalingEnabled="True" TextColor="#FFFFFF" FontSize="18" FontFamily="Arial"/>

            <Label Text="{Binding motivacion}" FontSize="Large" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
