<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoutineManager.MainPage"
             Title="Tech group">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25" BackgroundColor="#263238"
        x:Name="StackLayoutMain">
            <Label Text="routine manager"
               TextColor="White" 
               HorizontalTextAlignment="Center"
               FontSize="45"
               Padding="0,20,0,0" FontAutoScalingEnabled="True" FontFamily="Preview"/>
            <StackLayout x:Name="stackLayoutBotones"></StackLayout>
            <Label x:Name="LabelRutina" IsVisible="true" Text="No haz creado ninguna rutina, crea una!"></Label>
            <Button Text="CREAR RUTINA NUEVA"
                WidthRequest="300" HeightRequest="50" Background="#455a64" BorderColor="#546e7a" BorderWidth="1" FontAutoScalingEnabled="True" TextColor="#FFFFFF" FontSize="18" FontFamily="Arial" Command="{Binding NewRoutineCommand}"/>

            <Label Text="" FontSize="Large" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
