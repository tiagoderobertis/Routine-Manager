<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoutineManager.Dias.Lunes"
             Title="Lunes">

        
            <Grid VerticalOptions="FillAndExpand" BackgroundColor="#BCF8FF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Fila que se expande -->
                    <RowDefinition Height="Auto" />
                    
                </Grid.RowDefinitions>
                <Label Text="Ejercicios:" Grid.Row="0" FontSize="40" FontAutoScalingEnabled="False" FontFamily="Preview" HorizontalTextAlignment="Center"/>
                <Button Grid.Row="1"
                        Text="Empezar Rutina" 
                        VerticalOptions="End" 
                        HorizontalOptions="Center"
                        FontSize="35" 
                        HeightRequest="80" 
                        WidthRequest="300" 
                        BackgroundColor="#010744"
                        Margin="0,0,0,20">
                </Button>
            </Grid>
    
  
</ContentPage>